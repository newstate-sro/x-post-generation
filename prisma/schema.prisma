// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    String @id @default(uuid())
  email String @unique
  name  String

  facebookPostReactions FacebookPostReaction[]
}

model SystemConfiguration {
  id                 String   @id @default(uuid())
  lastGenerationTime DateTime @default(now())
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model EntityOfInterest {
  id             String  @id @default(uuid())
  name           String
  description    String
  facebookPageId String?

  facebookPage FacebookPage? @relation(fields: [facebookPageId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FacebookPage {
  id   String @id @default(uuid())
  url  String @unique
  name String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  posts             FacebookPost[]
  entityOfInterests EntityOfInterest[]
}

model FacebookPost {
  id     String @id @default(uuid())
  pageId String
  url    String @unique
  name   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  page FacebookPage @relation(fields: [pageId], references: [id], onDelete: Cascade)
  reaction FacebookPostReaction[]
}

model FacebookPostReaction {
  id     String @id @default(uuid())
  postId String
  userId String
  reaction String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  post FacebookPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Logs {
  id String @id @default(uuid())
  source String
  message String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
